# Master Creator v3 MVP - Environment Configuration
# Copy this file to .env and fill in your actual values

# ═══════════════════════════════════════════════════════════
# API Keys
# ═══════════════════════════════════════════════════════════
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ═══════════════════════════════════════════════════════════
# Database Configuration
# ═══════════════════════════════════════════════════════════
DB_HOST=localhost
DB_PORT=5432
DB_NAME=master_creator
DB_USER=admin
DB_PASSWORD=changeme
DATABASE_URL=postgresql://admin:changeme@localhost:5432/master_creator

# ═══════════════════════════════════════════════════════════
# Vector Store Configuration
# ═══════════════════════════════════════════════════════════
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=master_creator_vectors

# ═══════════════════════════════════════════════════════════
# Application Settings
# ═══════════════════════════════════════════════════════════
APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=INFO

# ═══════════════════════════════════════════════════════════
# LLM Configuration
# ═══════════════════════════════════════════════════════════
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
ENABLE_PROMPT_CACHING=true

# ═══════════════════════════════════════════════════════════
# Cost Management
# ═══════════════════════════════════════════════════════════
MAX_COST_PER_REQUEST=1.00
DAILY_BUDGET_LIMIT=50.00
ENABLE_RATE_LIMITING=true

# ═══════════════════════════════════════════════════════════
# Educational Compliance
# ═══════════════════════════════════════════════════════════
ENABLE_FERPA_LOGGING=true
ENABLE_AUDIT_TRAIL=true
DATA_ENCRYPTION_KEY=generate_your_own_32_byte_key

# ═══════════════════════════════════════════════════════════
# Performance Settings
# ═══════════════════════════════════════════════════════════
MAX_CONCURRENT_STUDENTS=2250
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
QUERY_TIMEOUT_MS=50

# ═══════════════════════════════════════════════════════════
# Testing & Development
# ═══════════════════════════════════════════════════════════
ENABLE_SYNTHETIC_DATA=true
NUM_SYNTHETIC_STUDENTS=18
PYTEST_COVERAGE_THRESHOLD=80
